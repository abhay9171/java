package test;  // Defines the package name

import java.util.Scanner;  // Importing the Scanner class for reading user input

public class ScannerEven {

    public static void main(String[] args) {
        // Asking the user to input a number
        System.out.print("Enter a number - ");
        
        // Creating a Scanner object to read input from the system (keyboard)
        Scanner sc = new Scanner(System.in);
        
        // Reading the integer input from the user and storing it in the variable 'num'
        int num = sc.nextInt();
        
        // Checking if the number is even or odd
        if (num % 2 == 0) {
            // If the number is even, this message will be printed
            System.out.println("Given number is Even");
        } else {
            // If the number is odd, this message will be printed
            System.out.println("Given number is odd");
        }
        
        // Closing the Scanner object to avoid resource leak
        sc.close();
    }
}
